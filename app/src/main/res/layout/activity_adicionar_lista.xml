<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF9D8"
    tools:context=".AdicionarListaActivity">

    <EditText
        android:id="@+id/campo_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nome do puppy"
        android:textSize="26sp"
        android:padding="16dp" />

    <EditText
        android:id="@+id/campo_ementa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nome do usuÃ¡rio"
        android:textSize="26sp"
        android:padding="16dp" />

    <EditText
        android:id="@+id/campo_professor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Passeio"
        android:textSize="26sp"
        android:padding="16dp" />

    <EditText
        android:id="@+id/campo_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Imagem do passeio"
        android:textSize="26sp"
        android:padding="16dp" />

    <Button
        android:id="@+id/botao_salvar"
        android:background="#77D353"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar" />
</LinearLayout>