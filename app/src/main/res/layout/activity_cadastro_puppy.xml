<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mensagem_inicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#673AB7"
        android:textSize="24dp"
        android:text="@string/cadastro_puppy" />

    <TextView
        android:id="@+id/nome_puppy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Nome:" />

    <EditText
        android:id="@+id/campo_nome_puppy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite o nome do puppy"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/raça"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Raça:" />

    <EditText
        android:id="@+id/campo_raça"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite a raça do puppy"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Sexo:" />

    <EditText
        android:id="@+id/campo_sexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite o sexo do puppy"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/porte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Porte:" />

    <EditText
        android:id="@+id/campo_porte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite o porte do puppy"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/data_nacimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Data de Nascimento:" />

    <EditText
        android:id="@+id/campo_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:hint= "__/__/____"/>


    <Button
        android:id="@+id/botao_Cadastrar_puppy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#77D353"
        android:text="CADASTRAR"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />


</LinearLayout>